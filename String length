#include <stdio.h>
#include <string.h>

int main() {
    char name[100];   // Buffer to store the string
    int length;

    // Input
    printf("Enter a string (e.g., your name): ");
    scanf("%s", name);   // Reads a single word (no spaces)

    // Output the string
    printf("You entered: %s\n", name);

    // Find string length
    length = strlen(name);

    // Display length
    printf("Length of the string: %d\n", length);

    return 0;
}
