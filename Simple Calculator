#include <stdio.h>

int main() {
    int num1, num2;

    // Input
    printf("Enter first number: ");
    scanf("%d", &num1);

    printf("Enter second number: ");
    scanf("%d", &num2);

    // Calculations
    int sum = num1 + num2;
    int difference = num1 - num2;
    int product = num1 * num2;
    int modulus = num1 % num2;

    // To avoid division by zero
    float division;
    if (num2 != 0) {
        division = (float) num1 / num2;
    } else {
        division = 0; // Or you can print an error message
    }

    // Output
    printf("\nResults:\n");
    printf("Addition: %d + %d = %d\n", num1, num2, sum);
    printf("Subtraction: %d - %d = %d\n", num1, num2, difference);
    printf("Multiplication: %d * %d = %d\n", num1, num2, product);

    if (num2 != 0)
        printf("Division: %d / %d = %.2f\n", num1, num2, division);
    else
        printf("Division: Undefined (cannot divide by zero)\n");

    if (num2 != 0)
        printf("Modulus: %d %% %d = %d\n", num1, num2, modulus);
    else
        printf("Modulus: Undefined (cannot modulus by zero)\n");

    return 0;
}
